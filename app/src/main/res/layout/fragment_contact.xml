<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ContactFragment">

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/hotstep_holdings"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/call_button"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="15sp"
                    android:background="@drawable/buttontransparent"
                    android:text="Call: +254 723 309 556"/>
                <Button
                    android:id="@+id/email_button"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorText"
                    android:layout_gravity="center"
                    android:background="@drawable/buttontransparent"
                    android:textAlignment="center"
                    android:text="Email:hotstepholdings@gmail.com"/>
                <Button
                    android:id="@+id/website_button"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorText"
                    android:background="@drawable/buttontransparent"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:text="Visit:www.hotstep_holdings.com"/>
                <Button
                    android:id="@+id/logout_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/colorText"
                    android:background="@drawable/buttontransparent"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:text="Log out "/>
            </LinearLayout>

        </LinearLayout>

</RelativeLayout>