<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:layout_height="450dp"
    app:cardCornerRadius="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/property_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dashboard"
            android:fontFamily="@font/aref_ruqaa"
            android:textAlignment="center"
            android:textSize="25sp"/>
        <ImageView
            android:id="@+id/property_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/hotstep_holdings"/>
        <TextView
            android:id="@+id/property_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/aref_ruqaa"
            android:text="Property Size"
            android:layout_marginTop="10dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/property_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Property Description"
            android:textAlignment="center"
            android:fontFamily="@font/aref_ruqaa"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/property_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Property location"
            android:fontFamily="@font/aref_ruqaa"
            android:textSize="18sp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/property_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Property price"
            android:fontFamily="@font/aref_ruqaa"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/location-buttton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="View Location"
            android:fontFamily="@font/aref_ruqaa"
            android:layout_gravity="center"
            android:background="@drawable/buttontransparent"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>